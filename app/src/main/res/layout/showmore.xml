<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:id="@+id/lin"
                >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >




            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageView1">

                <ImageView
                    android:id="@+id/imgView_userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/orange"
                    android:padding="8dp"
                    android:src="@drawable/aadd"
                    android:tint="@color/White" />
                <TextView
                    android:id="@+id/textforget"
                    android:layout_width="250dp"
                    android:layout_height="50dp"

                    android:text="Details"
                    android:textColor="@color/textColor"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/imgView_addressIcon"
android:layout_marginTop="5dp"
                    android:layout_marginLeft="43dp"/>


            </RelativeLayout>




<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relativeLayout1"
    android:id="@+id/r1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img1"
                android:layout_marginLeft="50dp"
                android:background="@drawable/profile"

                />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img1"
        android:text="Clinic Name"
        android:textStyle="bold"
        android:id="@+id/txt1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_toRightOf="@id/img1"
        android:id="@+id/clcname"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:layout_marginTop="10dp"
                android:id="@+id/r2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img2"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/spec22"
                    android:backgroundTint="@color/colorblack"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img2"
                    android:text="Specialization"
                    android:textStyle="bold"
                    android:id="@+id/txt2"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/spec"
                    android:layout_below="@+id/txt2"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r2"
                android:layout_marginTop="10dp"
                android:id="@+id/r3">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img3"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/img_email"
                    android:backgroundTint="@color/colorblack"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img3"
                    android:text="Em@il"
                    android:textStyle="bold"
                    android:id="@+id/txt3"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img3"
                    android:id="@+id/docemail"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/txt3"
                   />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r3"
                android:layout_marginTop="10dp"
                android:id="@+id/r4">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img4"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/loc"
                    android:backgroundTint="@color/colorblack"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img4"
                    android:text="Location"
                    android:textStyle="bold"
                    android:id="@+id/txt4"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img4"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/location"
                    android:layout_below="@+id/txt4"
                   />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r4"
                android:layout_marginTop="10dp"
                android:id="@+id/r5">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img5"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/age"
                    android:backgroundTint="@color/colorblack"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img5"
                    android:text="Date Of Birth"
                    android:textStyle="bold"
                    android:id="@+id/txt5"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img5"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/date"
                    android:layout_below="@+id/txt5"
                   />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r5"
                android:layout_marginTop="10dp"
                android:id="@+id/r6">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img6"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/img_user"
                    android:backgroundTint="@color/colorblack"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img6"
                    android:text="SDD"
                    android:textStyle="bold"
                    android:id="@+id/txt6"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img6"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/sdd"
                    android:layout_below="@+id/txt6"
                   />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r6"
                android:layout_marginTop="10dp"
                android:id="@+id/r7">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img7"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/time"
                    android:backgroundTint="@color/colorblack"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img7"
                    android:text="Start Time"
                    android:textStyle="bold"
                    android:id="@+id/txt7"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img7"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/start"
                    android:layout_below="@+id/txt7"
                    />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r7"
                android:layout_marginTop="10dp"
                android:id="@+id/r8">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img8"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/time"
                    android:backgroundTint="@color/colorblack"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img8"
                    android:text="End Time"
                    android:textStyle="bold"
                    android:id="@+id/txt8"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img8"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/txt8"
                    android:id="@+id/end"
                    />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r8"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/img9"
                    android:layout_marginLeft="80dp"
                    android:backgroundTint="@color/colorblack">


                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/img9"
                    />


            </RelativeLayout>


</LinearLayout>



            </ScrollView>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/approve"
                android:text="Approve"
                android:layout_centerHorizontal="true"
                android:textColor="@color/White"
                android:background="@color/orange"
                android:textSize="19dp"
                android:layout_below="@+id/lin"

                />





        </RelativeLayout>





    </android.support.v7.widget.CardView>





</RelativeLayout>
