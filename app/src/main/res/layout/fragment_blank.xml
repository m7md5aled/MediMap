<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s3adoon.gp_v.MainActivity" >

   <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s3adoon.gp_v.MapsActivity"
       android:layout_marginVertical="53dp">


   </FrameLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginVertical="55dp"

       >


      <Spinner
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/unit_spinner"
          android:soundEffectsEnabled="true"

          android:spinnerMode="dropdown"
          />

      <Spinner
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/spec_spinner"
          android:layout_below="@+id/unit_spinner"
          android:spinnerMode="dropdown"
          android:soundEffectsEnabled="true"
          />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn1"
          android:text="Your location"
          android:layout_centerHorizontal="true"
          android:textColor="@color/colorblack"
          android:layout_below="@+id/spec_spinner"
          android:layout_marginTop="150dp"
          android:textSize="20dp"
          android:padding="10dp"

          />



      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btn2"
          android:text="Specific location"
          android:layout_centerHorizontal="true"
          android:textColor="@color/colorblack"
          android:layout_below="@+id/btn1"
          android:layout_marginTop="0dp"
          android:textSize="20dp"
            android:padding="10dp"
          />


   </RelativeLayout>


</FrameLayout>

