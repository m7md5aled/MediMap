<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">







            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageView1">

                <ImageView
                    android:id="@+id/imgView_userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/orange"
                    android:padding="8dp"
                    android:src="@drawable/aadd"
                    android:tint="@color/White" />
                <TextView
                    android:id="@+id/textforget"
                    android:layout_width="250dp"
                    android:layout_height="50dp"

                    android:text="Profile"
                    android:textColor="@color/textColor"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/imgView_addressIcon"
android:layout_marginTop="5dp"
                    android:layout_marginLeft="43dp"/>


            </RelativeLayout>



<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relativeLayout1"
    android:id="@+id/r1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img1"
                android:layout_marginLeft="50dp"
                android:background="@drawable/profile"

                />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img1"
        android:text="Name"
        android:textStyle="bold"
        android:id="@+id/txt1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_toRightOf="@id/img1"
        android:id="@+id/name"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:layout_marginTop="10dp"
                android:id="@+id/r2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img2"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/phonn"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img2"
                    android:text="Phone"
                    android:textStyle="bold"
                    android:id="@+id/txt2"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/txt2"
                    android:id="@+id/phone"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r2"
                android:layout_marginTop="10dp"
                android:id="@+id/r3">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img3"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/img_email"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img3"
                    android:text="Em@il"
                    android:textStyle="bold"
                    android:id="@+id/txt3"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img3"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/txt3"
                    android:id="@+id/email"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r3"
                android:layout_marginTop="10dp"
                android:id="@+id/r4">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img4"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/img_authentication"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img4"
                    android:text="Password"
                    android:textStyle="bold"
                    android:id="@+id/txt4"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img4"
                    android:layout_marginLeft="0dp"
                    android:layout_below="@+id/txt4"
                    android:maxLength="20"
                    android:id="@+id/pass"
                    android:inputType="textPassword"


                    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save"
    android:id="@+id/save"
    android:textSize="15dp"
    android:textColor="@color/bluelight"
    android:textStyle="bold"
    android:layout_toRightOf="@+id/pass"
    android:layout_marginTop="30dp"

    />
            </RelativeLayout>











            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/r4"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
